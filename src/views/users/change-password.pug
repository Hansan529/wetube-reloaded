extends ../base

block content 
  if errorMessage 
    span=errorMessage
  form(method="POST")
    if !loggedInUser.socialLogin
      input(name="oldPassword" placeholder="기존 비밀번호" type="password")
      input(name="newPassword" placeholder="변경할 비밀번호" type="password")
      input(name="newPassword1" placeholder="비밀번호 확인" type="password")
    else
      span 비밀번호가 존재하지 않습니다.
      input(name="oldPassword" placeholder="기존 비밀번호" type="password" disabled)
      input(name="newPassword" placeholder="변경할 비밀번호" type="password" disabled)
      input(name="newPassword1" placeholder="비밀번호 확인" type="password" disabled)
    input(type="submit", value="변경하기")