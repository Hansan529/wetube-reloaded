extends ../base

block content 
  if errorMessage 
    span=errorMessage
  form(method="POST" enctype="multipart/form-data")
    input(name="title" placeholder="제목" type="text" maxlength=50)
    label 동영상 파일
      input(name="video" type="file" accept="video/*" required)
    input(name="description" placeholder="설명" type="text" maxlength=140)
    input(name="hashtags" placeholder="태그" type="text")
    input(type="submit" value="Upload Video")